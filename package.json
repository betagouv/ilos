{
  "name": "ilos",
  "version": "0.0.1",
  "description": "RPC microframework written in Typescript",
  "repository": {
    "type" : "git",
    "url" : "https://github.com/betagouv/ilos.git"
  },
  "license": "Apache-2.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "lint": "lerna run lint",
    "build": "lerna run build",
    "test": "mocha ./packages/*/src/**/*.spec.ts",
    "test:integration": "mocha packages/*/tests/**/*.spec.ts",
    "coverage-ci": "nyc --all --reporter=lcov mocha packages/*/src/**/*.spec.ts packages/*/tests/**/*.spec.ts",
    "coverage": "nyc --all --reporter=text mocha packages/*/src/**/*.spec.ts packages/*/tests/**/*.spec.ts",
    "watch": "lerna run --parallel watch",
    "changed": "lerna changed",
    "publish": "lerna publish"
  },
  "mocha": {
    "require": [
      "ts-node/register",
      "tsconfig-paths/register"
    ]
  },
  "nyc": {
    "include": [
      "packages/*/src/**/*.ts"
    ],
    "exclude": [
      "packages/*/src/**/*.spec.ts",
      "packages/*/src/interfaces/**",
      "packages/*/src/types/**",
      "packages/*/src/exceptions/**",
      "packages/*/src/**/index.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "devDependencies": {
    "lerna": "^3.15.0"
  }
}
