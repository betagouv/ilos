{
  "name": "@ilos/config",
  "version": "0.2.0",
  "publishConfig": {
    "access": "public"
  },
  "license": "Apache-2.0",
  "author": "Nicolas MÃ©rigot <nicolas@belenio.fr>",
  "repository": {
    "type": "git",
    "url": "https://github.com/betagouv/ilos.git"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "mocha src/*.spec.ts src/**/*.spec.ts",
    "test:integration": "mocha tests/**/*.spec.ts",
    "coverage-ci": "nyc --all --reporter=lcov mocha src/*.spec.ts src/**/*.spec.ts tests/**/*.spec.ts",
    "coverage": "nyc --all --reporter=text mocha src/*.spec.ts src/**/*.spec.ts tests/**/*.spec.ts",
    "watch-test": "yarn test -- --watchAll",
    "watch": "tsc -w",
    "lint": "tslint -c ../../tslint.json -p tsconfig.json"
  },
  "mocha": {
    "require": [
      "ts-node/register",
      "tsconfig-paths/register"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts",
      "src/interfaces/**",
      "src/types/**",
      "src/exceptions/**",
      "src/**/index.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "devDependencies": {
    "@types/bull": "^3.5.11",
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/commander": "^2.12.2",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.13.7",
    "@types/sinon": "^7.0.11",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-nock": "^1.1.0",
    "mocha": "^6.1.3",
    "mock-fs": "^4.9.0",
    "nock": "^10.0.6",
    "nyc": "^13.3.0",
    "sinon": "^7.3.2",
    "supertest": "^4.0.2",
    "ts-node": "^8.1.0",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.15.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-import-group-ordering": "^2.1.1",
    "typescript": "^3.4.3"
  },
  "dependencies": {
    "js-yaml": "^3.13.1",
    "lodash": "^4.17.11",
    "@ilos/common": "^0.2.0"
  },
  "peerDependencies": {
    "@ilos/core": "~0",
    "@ilos/env": "~0"
  }
}
